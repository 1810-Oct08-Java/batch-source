<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.revature.beans.Customer" table="Customer">
        <id name="id" column="CUSTOMER_ID">
            <generator class="increment"></generator> <!-- This will increment our id every time. -->
        </id>
        <property name="name" type="org.hibernate.type.StringType" column="CUSTOMER_NAME"></property>
        <property name="phoneNumber" type="org.hibernate.type.StringType" column="CUSTOMER_PHONE"></property>
    </class>
</hibernate-mapping>