<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.revature.beans.Invoice" table="Invoice">
        <id name="invoiceId" column="INVOICE_ID">
            <generator class="increment"></generator> <!-- This will increment our id every time. -->
        </id>
        <property name="Date" type="org.hibernate.type.DateType" column="INVOICE_DATE"></property>
        <property name="amount" column="INVOICE_AMOUNT"></property>
    </class>
</hibernate-mapping>